[
    {
      "namespace": "gemini",
      "description": "Use the <code>chrome.gemini</code> to interact with the Gemini services.",
      "compiler_options": {
        "implemented_in": "brave/browser/extensions/api/gemini_api.h"
      },
      "events": [
      ],
      "functions": [
        {
          "name": "getClientUrl",
          "type": "function",
          "description": "Fetches the Oauth Url for Gemini",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "clientUrl",
                  "type": "string"
                }
              ]
            }
          ]
        },
        {
          "name": "getAccessToken",
          "type": "function",
          "description": "Facilitates access token creation given a temporary code",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "success",
                  "type": "boolean",
                  "description": "Indicates the access token was retrieved successfully"
                }
              ]
            }
          ]
        },
        {
          "name": "refreshAccessToken",
          "type": "function",
          "description": "Facilitates fetching a new access token",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "success",
                  "type": "boolean",
                  "description": "Indicates the access token was refreshed successfully"
                }
              ]
            }
          ]
        },
        {
          "name": "getTickerPrice",
          "type": "function",
          "description": "Retrieves ticker price for a given asset",
          "parameters": [
            {
              "type": "string",
              "name": "asset"
            },
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "price",
                  "type": "string"
                }
              ]
            }
          ]
        },
        {
          "name": "getAccountBalances",
          "type": "function",
          "description": "Retrieves user asset balances",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "balances",
                  "type": "any"
                }, {
                  "name": "authInvalid",
                  "type": "boolean",
                  "description": "Indicates whether the auth token has expired"
                }
              ]
            }
          ]
        },
        {
          "name": "getDepositInfo",
          "type": "function",
          "description": "Fetches user address/url given an asset",
          "parameters": [
            {
              "type": "string",
              "name": "asset"
            }, {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "depositAddress",
                  "type": "string"
                }
              ]
            }
          ]
        },
        {
          "name": "revokeToken",
          "type": "function",
          "description": "Revokes the current access and refresh tokens",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "success",
                  "type": "boolean"
                }
              ]
            }
          ]
        },
        {
          "name": "getOrderQuote",
          "type": "function",
          "description": "Gets a quote for a given order",
          "parameters": [
            {
              "type": "string",
              "name": "side"
            },
            {
              "type": "string",
              "name": "symbol"
            },
            {
              "type": "string",
              "name": "spend"
            },
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "quote",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "quote id"
                    },
                    "quantity": {
                      "type": "string",
                      "description": "order quantity"
                    },
                    "fee": {
                      "type": "string",
                      "description": "order fee"
                    },
                    "price": {
                      "type": "string",
                      "description": "order unit price"
                    },
                    "totalPrice": {
                      "type": "string",
                      "description": "order total price"
                    }
                  }
                },
                {
                  "type": "string",
                  "name": "error"
                }
              ]
            }
          ]
        },
        {
          "name": "executeOrder",
          "type": "function",
          "description": "Gets a quote for a given order",
          "parameters": [
            {
              "type": "string",
              "name": "symbol"
            },
            {
              "type": "string",
              "name": "side"
            },
            {
              "type": "string",
              "name": "quantity"
            },
            {
              "type": "string",
              "name": "price"
            },
            {
              "type": "string",
              "name": "fee"
            },
            {
              "type": "number",
              "name": "quoteId"
            },
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "type": "boolean",
                  "name": "success"
                }
              ]
            }
          ]
        },
        {
          "name": "isSupported",
          "type": "function",
          "description": "Fetches whether gemini is supported",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "supported",
                  "type": "boolean"
                }
              ]
            }
          ]
        }
      ],
      "types": [
      ],
      "properties": {
      }
    }
  ]
  